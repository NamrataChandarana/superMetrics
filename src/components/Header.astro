---
import Button from "./Button.astro";
import NavItems from "./NavItems";
import logoImg from '../asset/logo.png';
import { Image } from "astro:assets";
---

<div class="page-padding border border-b border-gray-200 h-[80px] py-5 font-geist">
    <div class="flex justify-around items-center">
        <div>
            <Image src={logoImg} alt="logo" height={260} width={130}/>
        </div>
        <NavItems/>
        <div>
            <button class="py-[10px] px-[14px] text-darkBlue rounded-[8px] space-x-1 h-[40px] w-[73px] font-semibold text-sm">Log in</button>
            <Button title="Sign up" class="h-[40px] w-min-[83px] py-[2.5]"/>
        </div>
    </div>
</div>